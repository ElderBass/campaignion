  "bugs": {
    "url": "https://github.com/ElderBass/campaignion/issues"
  },
  "homepage": "https://github.com/ElderBass/campaignion#readme",
  "devDependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.4",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2"
  }
